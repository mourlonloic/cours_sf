{% set myVar = "My Data" %}
{% set mySecondVar = "My new data" %}
{% set htmlTags = "Bonsoir" %}
{% set myObj = { 'key': 'value', 'key2': 'value 2' } %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Books Store</h1>
    <div class="row">
        <div class="col-3">
            Sidebar
        </div>
        <div class="col-9">
            Content panel <br>

            {{ mySecondVar }} <br><br>

            {# Boucle FOR #}

            {% for key, value in myObj %}
                {{loop.index}} : {{ key }} - {{value}}<br>
            {% endfor %}

            {% for value in myObj %}
            {{loop.index0}} :{{value}}<br>
        {% endfor %}

        {% for i in 0..10 %}
