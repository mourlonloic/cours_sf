        {% endfor %}

        {# Pipe raw (rendre HTML) #}
        {{ htmlTags | raw}} <br>
        {{ htmlTags }} <br>
        <br>

        {# Condition #}
        {% if true %}
            Ma condition est vrai
        {% endif %}
        

        </div>
    </div>

</div>
{% endblock %}
